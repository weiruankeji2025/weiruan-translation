{
  "manifest_version": 3,
  "name": "微软科技 - 智能翻译助手",
  "version": "1.0.0",
  "description": "强大的多引擎翻译工具：支持选词翻译、图片OCR翻译、视频字幕翻译 | Powered by 微软科技",
  "author": "微软科技",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "微软科技 - 智能翻译助手"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "css": ["scripts/content.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://www.bing.com/*",
    "https://api.mymemory.translated.net/*"
  ],
  "options_page": "options/options.html",
  "commands": {
    "translate-selection": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "翻译选中的文本"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
